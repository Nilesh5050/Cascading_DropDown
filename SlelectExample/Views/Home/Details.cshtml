@model SlelectExample.ViewModel.CustomerCreateModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Customer Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.EmailId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.EmailId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Country)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.countryName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.State)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.stateName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.City)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.cityName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Customer.CustomerId">Edit</a> |
    <a asp-action="List">Back to List</a>
</div>
